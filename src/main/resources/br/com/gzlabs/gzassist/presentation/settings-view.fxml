<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="br.com.gzlabs.gzassist.presentation.SettingsController"
           stylesheets="@style.css"
           styleClass="root-card">

    <VBox spacing="20" alignment="TOP_CENTER">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="⚙ Settings" styleClass="title"/>

        <TabPane id="settingsTabPane" tabClosingPolicy="UNAVAILABLE" prefWidth="400">

            <Tab text="🔐 General">
                <VBox spacing="16">
                    <padding>
                        <Insets top="14" right="18" bottom="14" left="18"/>
                    </padding>

                    <Label text="API Key:" styleClass="subtitle"/>
                    <TextField fx:id="apiKeyField" promptText="sk-..."/>

                    <Label text="Atalho Global:" styleClass="subtitle"/>
                    <TextField fx:id="hotkeyField" promptText="CTRL+ALT+K"/>

                    <Label text="Tempo do Overlay (segundos):" styleClass="subtitle"/>
                    <Spinner fx:id="timeoutSpinner" prefWidth="80"/>
                </VBox>
            </Tab>

            <Tab text="🎨 Interface">
                <VBox spacing="12">
                    <padding>
                        <Insets top="14" right="18" bottom="14" left="18"/>
                    </padding>
                    <Label text="(Configurações de tema e aparência em breve)" styleClass="subtitle"/>
                </VBox>
            </Tab>

            <Tab text="🤖 IA">
                <VBox spacing="12">
                    <padding>
                        <Insets top="14" right="18" bottom="14" left="18"/>
                    </padding>
                    <Label text="(Configurações de modelo e parâmetros da IA em breve)" styleClass="subtitle"/>
                </VBox>
            </Tab>

            <Tab text="⚙️ Advanced">
                <VBox spacing="12">
                    <padding>
                        <Insets top="14" right="18" bottom="14" left="18"/>
                    </padding>
                    <Label text="(Funcionalidades avançadas em breve)" styleClass="subtitle"/>
                </VBox>
            </Tab>

        </TabPane>

        <HBox spacing="12" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="8"/>
            </padding>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Cancelar" onAction="#onCancelClick" styleClass="footer-btn"/>
            <Button text="Salvar" onAction="#onSaveClick" styleClass="footer-btn"/>
        </HBox>

    </VBox>

</StackPane>
