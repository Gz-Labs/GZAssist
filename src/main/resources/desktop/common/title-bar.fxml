<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<HBox fx:id="titleBar"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.com.gzlabs.gzassist.desktop.TitleBarController"
      stylesheets="@title-bar.css"
      spacing="8" alignment="TOP_RIGHT" styleClass="window-controls">

    <Button fx:id="settingsButton" text="⚙" onAction="#onSettingsClick" styleClass="window-button"/>
    <Button fx:id="minimizeButton" text="—" onAction="#onMinimize" styleClass="window-button"/>
    <Button fx:id="closeButton" text="×" onAction="#onClose" styleClass="window-button"/>
</HBox>

